<?xml version="1.0"?>
<project name="NPB-CSharp" default="all" basedir=".">
	<description>Builder</description>
	<property name="debug" value="true" overwrite="true" />
	<property name="all" value="bin" />
	<property name="LIB" value="lib" />
	<property name="unsafe" value="-unsafe" />
	<target name="LIB" description="Libraries">
		<csc target="library" output="bin/Debug/FTBase.dll" debug="true">
			<sources>    
				<include name="FTBase/FTBase.cs" />  
			</sources>
			<references> 
				<include name='/usr/local/lib/MPI.dll' />         
			</references>
		</csc>
		<csc target="library" output="bin/Debug/Point.dll" debug="true">
			<sources>    
				<include name="FTControls/Point.cs" />  
			</sources>
		</csc>
	</target>
	<target name="all" description="Compilar" depends='LIB'>
		<csc target="exe" output="${all}/Debug/FT.exe" debug="true">
			<arg value="-unsafe" />
			<sources>
				<include name="FT.cs" />
				<include name="FTBase/FTBase.cs" />  
				<include name="FTControls/Point.cs" />  
				<include name="FTControls/BMArgs.cs" />  
			</sources>
			<references> 
				<include name='/usr/local/lib/MPI.dll' />         
			</references>
		</csc>
	</target>
</project>
