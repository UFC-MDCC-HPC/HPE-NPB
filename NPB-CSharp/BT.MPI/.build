<?xml version="1.0"?>
<project name="NPB-CSharp" default="all" basedir=".">
	<description>Builder</description>
	<property name="debug" value="true" overwrite="true" />
	<property name="all" value="bin" />
	<property name="LIB" value="lib" />
	<!--<property name="unsafe" value="-unsafe" />-->
	<target name="LIB" description="Libraries">
		<csc target="library" output="bin/Debug/Timer.dll" debug="true">
			<sources>    
				<include name="../Timer.MPI/Timer.cs" />  
			</sources>
			<references> 
				<include name='/usr/lib/MPI.dll' />         
			</references>
		</csc>
		<csc target="library" output="bin/Debug/BMInOut.dll" debug="true">
			<sources>    
				<include name="../BMInOut/BMArgs.cs" />  
			</sources>
		</csc>
		<csc target="library" output="bin/Debug/BTBase.dll" debug="true">
			<sources>    
				<include name="BTBase/BTBase.cs" />  
			</sources>
			<references> 
				<include name='/usr/lib/MPI.dll' />         
				<include name='bin/Debug/Timer.dll' />         
			</references>
		</csc>
	</target>
	<target name="all" description="Compilar" depends='LIB'>
		<csc target="exe" output="${all}/Debug/BT.exe" debug="true">
			<arg value="-unsafe"/>
			<arg value="-optimize"/>
			<sources>
				<include name="BT.cs" />
				<include name="BTBase/BTBase.cs" />  
				<include name="../Timer.MPI/Timer.cs" />  
				<include name="../BMInOut/BMArgs.cs" />  
			</sources>
			<references> 
				<include name='/usr/lib/MPI.dll' />         
			</references>
		</csc>
	</target>
</project>
